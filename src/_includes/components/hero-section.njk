<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Simple Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-slate-950 to-blue-950"></div>

    <div class="container mx-auto px-6 text-center relative z-10">
        <div class="max-w-6xl mx-auto space-y-8 md:space-y-16">
            <!-- Revolutionary self-building headline -->
            <div class="space-y-12">
                <div class="relative">
                    <h1 class="text-4xl md:text-7xl font-bold tracking-tight leading-tight mb-8">
                        <div class="block">
                            <span class="text-white">Build full </span>
                            <span class="bg-gradient-to-r from-blue-400 via-purple-400 to-emerald-400 bg-clip-text text-transparent animate-pulse">AI-ready</span>
                            <span class="text-white"> web apps</span>
                        </div>
                        <div class="block">
                            <span class="text-white">using nothing but </span>
                            <span class="html-tag text-4xl md:text-7xl text-orange-400 font-mono">&lt;HTML&gt;</span>
                        </div>
                    </h1>
                </div>

                <p class="text-xl md:text-2xl text-blue-100/80 max-w-4xl mx-auto leading-relaxed mt-8">
                    Ship web apps faster, with less code and complexity, made for AI â€“ with just HTML.
                </p>
            </div>

            <!-- Living concept explanation - unified sentence -->
            <div class="relative bg-gradient-to-br from-slate-800/40 to-purple-900/30 backdrop-blur-sm rounded-3xl p-8 border border-white/10 max-w-5xl mx-auto">
                <div class="text-lg md:text-xl text-blue-100 leading-relaxed font-medium space-y-6">
                    <p class="text-center opacity-90">
                        PageLove turns HTML into a full-stack application that:
                    </p>

                    <!-- Interactive neural concept nodes - part of the sentence -->
                    <div class="flex flex-col sm:flex-row justify-center items-center gap-4 sm:gap-3" id="neural-nodes">
                        {% for concept in neural_concepts %}
                        <div class="flex flex-col sm:flex-row items-center gap-4 sm:gap-2">
                            <div class="neural-node flex items-center gap-2 px-6 py-3 rounded-full border-2 cursor-pointer transition-all duration-500 border-{{ concept.color }}-500/50 bg-{{ concept.color }}-500/10 hover:border-{{ concept.color }}-400 hover:bg-{{ concept.color }}-500/20"
                                 data-concept="{{ concept.name }}"
                                 data-color="{{ concept.color }}"
                                 data-index="{{ loop.index0 }}">
                                <svg class="w-5 h-5 text-{{ concept.color }}-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    {{ concept.icon | safe }}
                                </svg>
                                <span class="text-{{ concept.color }}-300 font-semibold">{{ concept.name }}</span>
                            </div>
                            {% if not loop.last %}
                            <span class="text-blue-300 text-2xl font-light">+</span>
                            {% endif %}
                        </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Subtle connecting visual elements -->
                <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-blue-500/5 via-emerald-500/5 to-purple-500/5 pointer-events-none"></div>
            </div>

            <!-- Revolutionary neural demonstration nodes -->
            <div class="relative grid md:grid-cols-3 gap-8 max-w-6xl mx-auto" id="feature-cards">
                {% for feature in features %}
                <div class="feature-card relative group bg-gradient-to-br {{ feature.gradient }} backdrop-blur-sm rounded-2xl p-8 border border-white/10 transition-all duration-700 hover:scale-105"
                     data-index="{{ loop.index0 }}">
                    <!-- Breathing animation overlay -->
                    <div class="absolute inset-0 bg-gradient-to-br {{ feature.gradient }} rounded-2xl opacity-50"></div>

                    <!-- Neural node header -->
                    <div class="relative flex items-center gap-4 mb-6">
                        <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-{{ feature.color }}-400/30 to-{{ feature.color }}-600/40 backdrop-blur-sm flex items-center justify-center border border-{{ feature.color }}-400/50">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                {{ feature.icon | safe }}
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-2xl font-bold text-white">{{ feature.title }}</h3>
                            <code class="text-sm text-white/70 font-mono">{{ feature.tag }}</code>
                        </div>
                    </div>

                    <!-- Living description -->
                    <p class="relative text-white/90 leading-relaxed text-sm">
                        {{ feature.description }}
                    </p>

                    <!-- Neural activity indicator -->
                    <div class="absolute top-4 right-4">
                        <div class="neural-indicator w-3 h-3 rounded-full bg-{{ feature.color }}-400 opacity-50 transition-opacity"></div>
                    </div>
                </div>
                {% endfor %}
            </div>

            <!-- Revolutionary CTA section -->
            <div class="flex flex-col sm:flex-row gap-6 md:gap-8 justify-center items-center pb-8 md:pb-0">
                <button
                    class="btn btn-hero btn-lg group relative overflow-hidden shadow-2xl shadow-blue-500/25 hover:shadow-purple-500/25 transition-all duration-300"
                    onclick="scrollToSignup()"
                >
                    <div class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/20 to-white/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></div>
                    <svg class="h-5 w-5 mr-2 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                    </svg>
                    Get Early Access
                    <svg class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                </button>

                <button
                    class="btn btn-outline btn-lg group border-2 border-white/40 bg-transparent text-white hover:text-white hover:border-white/80 hover:bg-white/5 transition-all duration-300"
                    onclick="scrollToHowItWorks()"
                >
                    <svg class="h-5 w-5 mr-2 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                    </svg>
                    See How It Works
                </button>
            </div>
        </div>
    </div>
</section>