<section class="pb-12 md:pb-24 bg-gradient-hero relative overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-10">
        <div class="absolute top-10 left-10 html-tag text-white/20">
            &lt;ready&gt;
        </div>
        <div class="absolute top-32 right-20 html-tag text-white/20">
            &lt;build /&gt;
        </div>
        <div class="absolute bottom-20 left-32 html-tag text-white/20">
            &lt;future&gt;
        </div>
        <div class="absolute bottom-32 right-10 html-tag text-white/20">
            &lt;/html&gt;
        </div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
        <!-- CTA Section -->
        <div class="max-w-4xl mx-auto text-center pt-4 md:pt-8">
            <div class="mb-8 md:mb-16">
                <h2 class="text-4xl md:text-6xl font-bold text-white mb-8">
                    Ready to build?
                </h2>
                <h3 class="text-2xl md:text-3xl font-semibold text-white/90 mb-8">
                    Join our community.
                </h3>
                <p class="text-xl text-white/80 max-w-2xl mx-auto">
                    Gradual access for those who need it most. No spam, just launch updates.
                </p>
            </div>

            <div class="card max-w-2xl mx-auto p-8 bg-white/10 backdrop-blur-sm border-white/20 shadow-glow">
                <form id="signup-form" class="space-y-6">
                    <div class="flex flex-col sm:flex-row gap-4">
                        <div class="flex-1 relative">
                            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 h-5 w-5 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            <input
                                type="email"
                                name="email"
                                placeholder="Your email"
                                class="w-full pl-10 pr-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder:text-white/60 focus:bg-white/20 focus:outline-none focus:ring-2 focus:ring-white/30"
                                required
                            />
                        </div>
                        <button type="submit" class="btn btn-accent btn-lg shrink-0 group bg-white text-slate-900 hover:bg-white/90">
                            Get Early Access
                            <svg class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                            </svg>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Testimonials Slideshow -->
        <div class="relative mt-8 md:mt-10">
            <div class="overflow-x-auto scrollbar-hide">
                <div class="flex gap-6 pb-4 px-4 md:px-0" style="width: max-content">
                    {% for testimonial in testimonials %}
                    <div class="card w-80 md:w-96 flex-shrink-0 p-6 hover-lift group bg-white/10 backdrop-blur-sm border-white/20 snap-start">
                        <div class="space-y-4">
                            <svg class="h-8 w-8 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                            </svg>

                            <blockquote class="text-lg leading-relaxed text-white">
                                "{{ testimonial.quote }}"
                            </blockquote>

                            <div class="pt-4 border-t border-white/20">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <div class="font-semibold text-white">{{ testimonial.author }}</div>
                                        <div class="text-sm text-white/70">{{ testimonial.role }}</div>
                                    </div>

                                    <a
                                        href="{{ testimonial.url }}"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="btn btn-ghost btn-sm opacity-60 group-hover:opacity-100 transition-opacity text-white/70 hover:text-white hover:bg-white/10 flex items-center gap-1"
                                    >
                                        <span class="text-xs">{{ testimonial.source }}</span>
                                        <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Scroll indicator dots -->
            <div class="flex justify-center gap-2 mt-4">
                {% for testimonial in testimonials %}
                <div class="w-2 h-2 rounded-full bg-white/30"></div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>